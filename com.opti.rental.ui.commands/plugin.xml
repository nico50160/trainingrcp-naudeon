<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.opti.rental.ui.commands.handler.CopyCustomerHandler"
            commandId="org.eclipse.ui.edit.copy">
         <activeWhen>
            <reference
                  definitionId="com.opti.rental.isCustomer">
            </reference>
         </activeWhen>
         <enabledWhen>
            <reference
                  definitionId="com.opti.rental.isCustomer">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.opti.rental.isCustomer">
         <iterate>
            <instanceof
                  value="com.opcoach.training.rental.Customer">
            </instanceof>
         </iterate>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:com.opti.rental.ui.RentalTreeView?after=additions">
         <command
               commandId="org.eclipse.ui.edit.copy"
               label="Copy"
               style="push">
            <visibleWhen>
               <reference
                     definitionId="com.opti.rental.isCustomer">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
